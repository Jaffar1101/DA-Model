{
  "name": "Intervention",
  "type": "object",
  "properties": {
    "student_id": {
      "type": "string",
      "description": "Reference to student"
    },
    "intervention_type": {
      "type": "string",
      "enum": [
        "Tutoring",
        "Counseling",
        "Study Group",
        "Attendance Monitoring",
        "Academic Coaching",
        "Other"
      ],
      "description": "Type of intervention"
    },
    "description": {
      "type": "string",
      "description": "Detailed description of intervention"
    },
    "assigned_by": {
      "type": "string",
      "description": "Educator who assigned the intervention"
    },
    "status": {
      "type": "string",
      "enum": [
        "Pending",
        "In Progress",
        "Completed",
        "Cancelled"
      ],
      "default": "Pending",
      "description": "Current status"
    },
    "start_date": {
      "type": "string",
      "format": "date",
      "description": "Intervention start date"
    },
    "target_date": {
      "type": "string",
      "format": "date",
      "description": "Target completion date"
    },
    "outcome": {
      "type": "string",
      "description": "Results or outcome of intervention"
    },
    "effectiveness_rating": {
      "type": "number",
      "minimum": 1,
      "maximum": 5,
      "description": "Effectiveness rating (1-5)"
    }
  },
  "required": [
    "student_id",
    "intervention_type",
    "description",
    "assigned_by"
  ]
}